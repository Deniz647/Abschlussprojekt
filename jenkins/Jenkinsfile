pipeline {
    agent any

    stages {
        stage("Build Backend") {
            steps {
                dir("backend") {
                    sh "mvn clean install -Pdev -DskipTests"
                }
            }
        }

        stage("Build Frontend") {
            steps {
                dir("frontend") {
                    sh "npm install"
                    sh "npm run build"
                }
            }
        }

        stage("Test Backend") {
            steps {
                dir("backend") {
                    sh "mvn test -Pdev"
                }
            }
        }

        stage("Test Frontend") {
            steps {
                dir("frontend") {
                    sh "npm test"
                }
            }
        }
    }
}

